<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hackathon.myntra_hackerramp.PaintViewClass
        android:id="@+id/drawing"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FBFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/new_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#5E65CE"
            android:scaleType="centerCrop"
            android:contentDescription="New Drawing"
            android:src="@drawable/new_drawing" />

        <ImageButton
            android:id="@+id/draw_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#5E65CE"
            android:scaleType="centerCrop"
            app:tint="@color/white"
            android:contentDescription="Brush"
            android:src="@drawable/drawing" />

        <ImageButton
            android:id="@+id/erase_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#5E65CE"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:contentDescription="Eraser"
            android:src="@drawable/eraser" />

        <ImageButton
            android:id="@+id/save_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#5E65CE"
            android:scaleType="centerCrop"
            android:contentDescription="Save"
            android:src="@drawable/ic_save_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/paint_colors"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:background="@color/purple_700"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="2dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/drawing"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageButton
            android:id="@+id/color1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="@color/purple_200"
            android:outlineProvider="bounds"
            android:src="@drawable/paint"
            android:tag="#6200EE" />

        <ImageButton
            android:id="@+id/color2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="@color/teal_200"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#91EC27"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#FFFF6600"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#FFFFCC00"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#FF009900"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#EC2516"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#FF009999"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color9"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#FF0000FF"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#FF990099"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#E91E63"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color12"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#FFFFFFFF"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color13"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#FF787878"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />

        <ImageButton
            android:id="@+id/color14"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="#170202"
            android:outlineProvider="bounds"
            android:src="@drawable/paint" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/brushSizeChanger"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:progress="20"
        android:progressTint="#5E65CE"
        android:thumbTint="#5E65CE"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="goToFileUploadPage"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>